<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/formularioInterno"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:elevation="6dp"
    android:padding="16dp">

    <!-- Nombre de la actividad -->
    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_borde_azul"
        android:hint="     Nombre de la actividad"
        android:inputType="    textCapSentences"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <!-- Ponderación -->
    <EditText
        android:id="@+id/edtPonderacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_borde_azul"
        android:hint="    Ponderación"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#666666" />

    <!-- RadioButtons -->
    <RadioGroup
        android:id="@+id/rgTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actividad"
            android:textColor="#000000"
            android:buttonTint="#0D47A1" />

        <RadioButton
            android:id="@+id/rbEvaluacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Evaluación"
            android:textColor="#000000"
            android:buttonTint="#0D47A1" />
    </RadioGroup>

    <!-- Botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btnGuardarActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Guardar"
            android:textColor="@android:color/white"
            android:backgroundTint="#1565C0" />

        <Button
            android:id="@+id/btnCancelarActividad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Cancelar"
            android:textColor="#1565C0"
            android:backgroundTint="#ECEFF1" />
    </LinearLayout>
</LinearLayout>
