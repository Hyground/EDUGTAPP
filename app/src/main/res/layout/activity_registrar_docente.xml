<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro de Docente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#0D1B6B"
            android:layout_marginBottom="24dp" />

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:inputType="textPersonName"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- CUI -->
        <EditText
            android:id="@+id/etCui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CUI"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Correo -->
        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrónico (opcional)"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- Usuario -->
        <EditText
            android:id="@+id/etUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de usuario"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:paddingEnd="48dp"
            android:drawablePadding="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edittext_default" />

        <!-- Contraseña -->
        <EditText
            android:id="@+id/etClave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColor="#000000"
            android:layout_marginBottom="12dp" />

        <!-- GRADO y SECCIÓN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerGrado"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/spinnerSeccion"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Botón Google -->
        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Registrarse con Google"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="12dp"
            android:backgroundTint="#DB4437"
            android:layout_marginBottom="8dp" />

        <!-- Botón Facebook -->
        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Registrarse con Facebook"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_facebook"
            android:drawablePadding="12dp"
            android:backgroundTint="#4267B2"
            android:layout_marginBottom="16dp" />

        <!-- Error -->
        <TextView
            android:id="@+id/tvErrorRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B00020"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Progress -->
        <ProgressBar
            android:id="@+id/progressBarRegistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Registrar -->
        <Button
            android:id="@+id/btnRegistrarDocente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrarse"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:minHeight="48dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
