<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Encabezado con grado y secci贸n -->
    <LinearLayout
        android:id="@+id/headerInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#1565C0"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvGrado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grado:"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSeccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Secci贸n:"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Lista de estudiantes -->
    <ListView
        android:id="@+id/listaEstudiantes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerInfo"
        android:layout_above="@id/formulario"
        android:layout_marginTop="12dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingBottom="70dp" />

    <!-- Formulario inferior -->
    <LinearLayout
        android:id="@+id/formulario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="#F9F9F9"
        android:elevation="6dp"
        android:padding="16dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/edtCui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CUI"
            android:inputType="number"
            android:backgroundTint="#1565C0" />

        <EditText
            android:id="@+id/edtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="C贸digo Personal"
            android:inputType="text"
            android:backgroundTint="#1565C0" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:backgroundTint="#1565C0" />

        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"
            android:inputType="textPersonName"
            android:backgroundTint="#1565C0" />

        <!-- Botones del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guardar"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:backgroundTint="#43A047" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Cancelar"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:backgroundTint="#E53935" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bot贸n flotante para agregar estudiantes -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        android:contentDescription="Agregar estudiante"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="#0288D1" />
</RelativeLayout>