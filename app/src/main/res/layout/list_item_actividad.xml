<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TARJETA DE ACTIVIDAD -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#D6E6F2"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la actividad"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo: Actividad"
            android:textColor="#555555"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvPonderacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PonderaciÃ³n: 10.0"
            android:textColor="#555555"
            android:textSize="14sp" />

        <!-- Botones -->
        <LinearLayout
            android:id="@+id/opcionesLayoutActividad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCalificarActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0288D1"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Calificar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnActualizarActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#4CAF50"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Actualizar"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnEliminarActividad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="#D32F2F"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Eliminar"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
