<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filtroContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvGradoSeccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grado: - / SecciÃ³n: -"
        android:textStyle="bold"
        android:textColor="#000000"
        android:paddingBottom="6dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Bimestre"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Curso"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSeleccionBimestre"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Seleccionar"
            android:textColor="#000000"
            android:background="@drawable/bg_selector_box" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSeleccionCurso"
            android:layout_width="0dp"
            android:layout_weight="1.7"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:text="Seleccionar"
            android:textColor="#000000"
            android:background="@drawable/bg_selector_box" />
    </LinearLayout>
</LinearLayout>
