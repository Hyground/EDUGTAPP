<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E3F2FD" /> <!-- Azul clarito al tocar -->
            <stroke android:width="2dp" android:color="#2196F3" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA" /> <!-- Fondo gris muy claro -->
            <stroke android:width="1dp" android:color="#90A4AE" /> <!-- Gris azulado -->
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
